                                                                </div>
                                                            </div>

                                                            <!-- Familia -->
                                                            <div class="col-sm-6">
                                                                <div class="form-group">
                                                                    <label for="familia_EDIT"
                                                                        class="label">Família</label>
                                                                    <select class="form-control form-control-sm select2"
                                                                        style="width: 100%;" name="familia_EDIT"
                                                                        id="familia_EDIT">
                                                                        <% DTFamilia.forEach((row, index)=> { %>
                                                                        <option value="<%= row.familia %>">
                                                                            <%= row.familia %>
                                                                        </option>
                                                                        <% }) %>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <!-- Descrição -->
                                                        <div class="row">
                                                            <div class="col-sm-12">
                                                                <div class="form-group">
                                                                    <label for="descricao_EDIT"
