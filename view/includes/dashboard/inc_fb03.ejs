                                                    <div class="input-group date" id="data_EDIT"
                                                        data-target-input="nearest">
                                                        <input type="text"
                                                            class="form-control form-control-sm datetimepicker-input date_times"
                                                            data-target="#data_EDIT"
                                                            name="data_INPUT_EDIT"
                                                            id="data_INPUT_EDIT" required />
                                                        <div class="input-group-append"
                                                            data-target="#data_EDIT"
                                                            data-toggle="datetimepicker">
                                                            <div class="input-group-text"><i class="far fa-calendar-alt"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Turno -->
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label for="turno_EDIT" class="label">Turno</label>
                                                    <select class="form-control form-control-sm select2"
                                                        style="width: 100%;" name="turno_EDIT" id="turno_EDIT" required>
                                                        <option value="">-- Selecione --</option>
                                                        <option value="T1">T1</option>
                                                        <option value="T2">T2</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Quantidades -->
                                        <div class="row">
                                            <!-- avaria_interna -->
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label for="avaria_interna_EDIT" class="label">Avaria interna</label>
                                                    <input type="text" class="form-control form-control-sm"
