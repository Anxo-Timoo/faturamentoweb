                                                    <label for="ppm_atual_EDIT" class="label">PPM atual</label>
                                                    <input type="text" class="form-control form-control-sm"
                                                        name="ppm_atual_EDIT" id="ppm_atual_EDIT"
                                                        placeholder="Qtde">
                                                </div>
                                            </div>

                                            <!-- ppm_acumulado -->
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label for="ppm_acumulado_EDIT" class="label">PPM acumulado</label>
                                                    <input type="text" class="form-control form-control-sm"
