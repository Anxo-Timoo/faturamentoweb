                                                        <option value="Saúde">Saúde</option>
                                                        <option value="Cooperativa">Cooperativa</option>
                                                        <option value="Logística">Logística</option>
                                                        <option value="Engenharia">Engenharia</option>
                                                        <option value="Diretoria">Diretoria</option>                                                        
                                                    </select>
                                                </div>
                                            </div>   

                                        </div>

                                        <!-- Campos: Título -->
                                        <div class="row">

                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label for="titulo_EDIT" class="label">Título de referência</label>
                                                    <input type="text" class="form-control form-control-sm" name="titulo_EDIT" id="titulo_EDIT" placeholder="Título">
                                                </div>
                                            </div>

                                        </div>

                                        <!-- Campos: Visivel, cor -->
                                        <div class="row">

                                            <!-- Visivel -->
                                            <div class="col-sm-2">
                                                <div class="form-group">
                                                    <label for="visivel_EDIT" class="label">Visível na página?</label>
                                                    <div class="custom-control custom-checkbox">
                                                        <input class="custom-control-input" type="checkbox" style="cursor: pointer" 
                                                            name="visivel_EDIT" id="visivel_EDIT">
                                                        <label for="visivel_EDIT" class="custom-control-label" style="cursor: pointer">Sim/Não</label>
                                                    </div>
                                                </div>
                                            </div>                                               

                                            <!-- Cor Plano de fundo da seção -->
                                            <div class="col-sm-2">
