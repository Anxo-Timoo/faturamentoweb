                                                <!-- Primeiro botão « -->
                                                <% if (currentPage>= 1) { %>
                                                    <li><a href="#" 
                                                        onclick="(function() {
                                                            window.location = '/j1btax/?page=1' + 
                                                            '&[cliente]=' + document.getElementById('filter_Cliente').value + 
                                                            '&[material]=' + document.getElementById('filter_Material').value;
                                                        })()">&laquo;</a>
                                                    </li>
                                                <% } %>

