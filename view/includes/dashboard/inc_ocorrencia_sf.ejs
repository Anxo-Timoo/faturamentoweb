<!-- Page Content (header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row sm-2">
            <!-- Título -->
            <div class="col-sm-6">
                <h1>Ocorrências NF-e</h1>
            </div>
            <!-- Navegação histórica -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/home">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                    <li class="breadcrumb-item active">Ocorrências</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Page Content (conteúdo) -->
<section class="content">
    <div class="container-fluid">
        <!-- Filtragem avançada -->
        <div class="row">
            <div class="col-sm-12">
                <div class="content-collapse">
                    <a data-toggle style="color: white;padding-left: 20px;"><i class="fas fa-filter" style="color: white;padding-right: 10px;"></i>Filtros</a>
                    <div class="content">
                        <form role="form" action="/ocorrencia_sf" method="post">
                            <div class="card-body" style="display: grid;margin: -26px -21px -11px -21px;">

                                <!-- Campos do filtro -->
                                <label for="filter_Cod" style="margin: 10px 0 0 0;">NF-e</label>
                                <textarea class="form-control form-control-sm" name="filter_Cod" id="filter_Cod" rows="1"><%= body.cod %></textarea>                                    

                                <label for="filter_Setor" style="margin: 10px 0 0 0;">Data</label>
                                <textarea type="text" class="form-control form-control-sm" name="filter_Setor" id="filter_Setor" rows="1"><%= body.setor %></textarea>

                                <label for="filter_Solucao" style="margin: 10px 0 0 0;">CodRetorno</label>
                                <textarea type="text" class="form-control form-control-sm" name="filter_Solucao" id="filter_Solucao" rows="1"><%= body.solucao %></textarea>

                                <label for="filter_Descricao" style="margin: 10px 0 0 0;">Descrição</label>
                                <textarea class="form-control form-control-sm" name="filter_Descricao" id="filter_Descricao" rows="1"><%= body.descricao %></textarea>

                                <label for="filter_Acao" style="margin: 10px 0 0 0;">Ação</label>
                                <textarea class="form-control form-control-sm" name="filter_Acao" id="filter_Acao" rows="1"><%= body.acao %></textarea>

                                <label for="filter_Responsavel" style="margin: 10px 0 0 0;">Responsável</label>
                                <textarea class="form-control form-control-sm" name="filter_Responsavel" id="filter_Responsavel" rows="1"><%= body.responsavel %></textarea>

                                <label for="filter_Status" style="margin: 10px 0 0 0;">Status</label>
                                <textarea class="form-control form-control-sm" name="filter_Status" id="filter_Status" rows="1"><%= body.status %></textarea>

                            </div>

                            <!-- Botões Filtrar e Limpar -->
                            <div class="card-footer" style="background: center;padding: 8px 0 8px 0px;display: flex;">
                                <!-- Filtrar -->
                                <button type="button" class="form-control btn-sm btn-primary" style="width: auto;height: fit-content;" onclick="(function() {
                                        window.location = '/ocorrencia_sf/?page=1' + 
                                        '&[cod]=' + document.getElementById('filter_Cod').value + 
                                        '&[setor]=' + document.getElementById('filter_Setor').value + 
                                        '&[solucao]=' + document.getElementById('filter_Solucao').value + 
                                        '&[descricao]=' + document.getElementById('filter_Descricao').value + 
                                        '&[acao]=' + document.getElementById('filter_Acao').value + 
                                        '&[responsavel]=' + document.getElementById('filter_Responsavel').value + 
                                        '&[status]=' + document.getElementById('filter_Status').value;
                                    })()">&nbsp;&nbsp;&nbsp;&nbsp;Filtrar&nbsp;&nbsp;&nbsp;&nbsp;
                                </button>
                                &nbsp;&nbsp;&nbsp;
                                <!-- Limpar -->
                                <button type="button" class="form-control btn-sm btn-secondary" style="width: auto;height: fit-content;" onclick="(function() {
                                        document.getElementById('filter_Cod').value='';
                                        document.getElementById('filter_Setor').value='';
                                        document.getElementById('filter_Solucao').value='';
                                        document.getElementById('filter_Descricao').value='';
                                        document.getElementById('filter_Acao').value='';
                                        document.getElementById('filter_Responsavel').value='';
                                        document.getElementById('filter_Status').value='';
                                    })()">&nbsp;&nbsp;&nbsp;Limpar&nbsp;&nbsp;&nbsp;
                                </button>
                                <!-- Dicas -->
                                <i class="far fa-question-circle" style="margin: 5px 0px 0px auto;color: #474f549f;"
                                    data-toggle="popover" data-placement="top" 
                                    title="Dicas!" 
                                    data-content="Você pode pesquisar vários critérios de uma vez, separando-os por ponto e vírgula<br>
                                                  <b>Exemplo:</b> <i>texto1;texto2;texto3</i><br><br>
                                                  Caso seja um campo data, digite a data no formato americano: AAAA-MM-DD<br>
                                                  <b>Exemplo:</b> <i>2021-05-22</i>">
                                </i>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- CRUD -->
        <div class="row">
            <div class="col-sm-12">

                <!-- Para iniciar fechado, adicione collapsed-card na class-->
                <div class="card card-primary card-outline">

                    <!-- ######################################################################### Cabeçalho -->
                    <div class="card-header">
                        <!-- Botões -->
                        <div class="btn-group">
                            <!-- Abre o modal para INSERT -->
                            <!-- <button type="button" class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#modalADD">
                                &nbsp;Adicionar&nbsp;
                            </button> -->
                        </div>

                        <div class="btn-group">
                            <!-- Botão para exportar dados da tabela (tableExport) -->
                            <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-download" aria-hidden="true"></i>
                                <span class="caret"></span>
                            </button>

                            <!-- Exportar -->
                            <div class="dropdown-menu" role="menu">
                                <!-- Exportar para Excel -->
                                <a class="dropdown-item" style="cursor: pointer;" onclick="(function(){
                                    $('#TBtableBigData').tableExport({type:'excel', fileName: 'Ocorrências_sf', exportHiddenCells: true, ignoreColumn:'[10]'});                
                                })()"><i class="fas fa-file-excel" style="color: #118311;"></i>&nbsp;&nbsp;Ms-Excel</a>
                                <!-- Exportar para PDF -->
                                <a class="dropdown-item" style="cursor: pointer;" onclick="(function(){
                                    $('#TBtableBigData').tableExport({type:'pdf', fileName: 'Ocorrências_sf', exportHiddenCells: true, ignoreColumn:'[10]'});                
                                })()"><i class="fas fa-file-pdf" style="color: #d17021;"></i>&nbsp;&nbsp;PDF</a>
                            </div>
                        </div>

                        <!-- Botão Ocultar ou exibir o card -->
                        <div class="card-tools">
                            <!-- Botão Abrir/fechar card (Icone: fa-minus ou fa-plus) -->
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <!-- Botão destruir card -->
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>

                    </div>

                    <!-- ######################################################################### Tabela -->
                    <div class="card-body">
                        <% if (!Array.isArray(DTOcorrencias_sf) || !DTOcorrencias_sf.length) { %>
                        <!-- Não existe dados na tabela -->
                        <p class="text-center">Clique <a data-toggle="modal" data-target="#modalADD" style="cursor:pointer; color:rgb(79, 79, 255)"> aqui </a>para adicionar um novo registro.</p>
    
                        <% } else { %>
                            <table id="TBtableBigData" class="table table-hover" style="display: none;">
                                
                                <!-- Paginação do BD -->
                                <div class="row" style="place-items: center;margin-top: -31px;margin-bottom: -17px;flex-flow: nowrap;">
                                    <% if (pageCount>= 1) { %>
                                    <!-- Texto lateral esquerdo mostrando a qtde de páginas -->
                                    <div class="col-sm-12 col-md-6">
                                        <div class="dataTables_info" aria-live="polite">
                                            Página <%= currentPage %> de <%= pageCount %> de um total de <%= totalItens %> registros (<%= pageSize %> por página)
                                        </div>
                                    </div>

                                    <!-- Lista de botões superior direito para paginação -->
                                    <div class="col-sm-12 col-md-6" style="text-align-last: right;">
                                        <div class="dataTables_paginate paging_simple_numbers">
                                            <ul class="pagination">
                                                <!-- Primeiro botão « -->
                                                <% if (currentPage>= 1) { %>
                                                    <li><a href="#" 
                                                        onclick="(function() {
                                                            window.location = '/ocorrencia_sf/?page=1' + 
                                                            '&[cod]=' + document.getElementById('filter_Cod').value + 
                                                            '&[setor]=' + document.getElementById('filter_Setor').value + 
                                                            '&[solucao]=' + document.getElementById('filter_Solucao').value + 
                                                            '&[descricao]=' + document.getElementById('filter_Descricao').value + 
                                                            '&[acao]=' + document.getElementById('filter_Acao').value + 
                                                            '&[responsavel]=' + document.getElementById('filter_Responsavel').value + 
                                                            '&[status]=' + document.getElementById('filter_Status').value;
                                                        })()">&laquo;</a>
                                                    </li>
                                                <% } %>

                                                <!-- Segundo botão desabilitado caso páginação > 5 -->
                                                <% var i=1; if (currentPage> 5) { i = + currentPage -4;} %>
                                                <% if (i !==1) { %>
                                                    <li class="disabled"><a href="#">...</a></li>
                                                <% } %>

                                                <!-- Botões da paginação -->
                                                <% for (i; i <=pageCount; i++) { %>
                                                    <% if (currentPage==i) { %>
                                                        <!-- Página corrente -->
                                                        <li class="active"><span><%= i %> <span class="sr-only">(current)</span></span></li>
                                                    <% } else { %>
                                                        <!-- Demais páginas -->
                                                        <li><a href="#" 
                                                            onclick="(function() {
                                                                window.location = '/ocorrencia_sf/?page=<%= i %>' + 
                                                                '&[cod]=' + document.getElementById('filter_Cod').value + 
                                                                '&[setor]=' + document.getElementById('filter_Setor').value + 
                                                                '&[solucao]=' + document.getElementById('filter_Solucao').value + 
                                                                '&[descricao]=' + document.getElementById('filter_Descricao').value + 
                                                                '&[acao]=' + document.getElementById('filter_Acao').value + 
                                                                '&[responsavel]=' + document.getElementById('filter_Responsavel').value + 
                                                                '&[status]=' + document.getElementById('filter_Status').value;
                                                            })()"><%= i %>
                                                            </a>
                                                        </li>
                                                    <% } %>

                                                    <!-- Mostra apenas 5 botões atras e a frente da página atual -->
                                                    <% if (i==(+currentPage +4)) { %>
                                                        <li class="disabled"><a href="#">...</a></li>
                                                    <% break; } %>
                                                <% } %>

                                                <!-- Último botão » -->
                                                <% if(currentPage !=pageCount) { %>
                                                    <li><a href="#" 
                                                        onclick="(function() {
                                                                window.location = '/ocorrencia_sf/?page=<%= pageCount %>' + 
                                                                '&[cod]=' + document.getElementById('filter_Cod').value + 
                                                                '&[setor]=' + document.getElementById('filter_Setor').value + 
                                                                '&[solucao]=' + document.getElementById('filter_Solucao').value + 
                                                                '&[descricao]=' + document.getElementById('filter_Descricao').value + 
                                                                '&[acao]=' + document.getElementById('filter_Acao').value + 
                                                                '&[responsavel]=' + document.getElementById('filter_Responsavel').value + 
                                                                '&[status]=' + document.getElementById('filter_Status').value;
                                                        })()">&raquo;</a>
                                                    </li>
                                                <% } %>
                                            </ul>
                                        </div>
                                    </div>
                                    <% } %>
                                </div>

                                <!-- Cabeçalho: Titulos da tabela -->
                                <thead class="thead-light">                                    
                                    <tr>
                                        <th scope="col">Cod</th>
                                        <th scope="col">Data</th>
                                        <th scope="col">NºNFE</th>
                                        <th scope="col">Status Doct.</th>
                                        <th scope="col">Cod.Retorno</th>
                                        <th scope="col">Descricao</th>
                                        <th scope="col">Acao</th>
                                        <th scope="col">Responsavel</th>
                                        <th scope="col">Prazo</th>
                                        <th scope="col">Status Process.</th>
                                        <th scope="col">Opcoes</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <!-- Detalhes: Dados da tabela -->
                                    <% DTOcorrencias_sf.forEach((row, index) => { %>
                                        <tr>
                                            <td style="min-width: 30px;"><%= row.cod %></td>                                            
                                            <% if(row.data == null || row.data == '0000-00-00 00:00:00' || row.data == 'Invalid Date') { %>
                                                <td></td>
                                            <% } else { %>
                                                <td style="min-width: 120px;"><%- row.data.toLocaleString() %></td>
                                            <% } %>
                                            <td><%= row.semana %></td>
                                            <td><%= row.setor %></td>
                                            <td><%= row.solucao %></td>
                                            <td style="min-width: 150px;"><%= row.descricao %></td>                                            
                                            <td style="min-width: 150px;"><%= row.acao %></td>
                                            <td><%= row.responsavel %></td>
                                            <% if(row.prazo == null || row.prazo == '0000-00-00 00:00:00' || row.prazo == 'Invalid Date') { %>
                                                <td></td>
                                            <% } else { %>
                                                <td style="min-width: 120px;"><%- row.prazo.toLocaleString() %></td>
                                            <% } %>
                                            <td><%= row.status %>%</td>

                                            <!-- Coluna: Opções -->
                                            <td style="min-width: 130px;">
                                         <!--        <button class="btn btn-xs btn-warning" data-toggle="modal" data-target="#modalEDIT" onclick="(function(){                      
                                                //Setando o valor nos campos de texto 
                                                document.getElementById('cod_EDIT').value = '<%= row.cod %>';
                                                $('#data_EDIT').data('datetimepicker').date('<%- row.data %>');
                                                $('#setor_EDIT').val('<%= row.setor %>');
                                                $('#setor_EDIT').trigger('change');
                                                $('#solucao_EDIT').val('<%= row.solucao %>');
                                                $('#solucao_EDIT').trigger('change');
                                                document.getElementById('descricao_EDIT').value = `<%= row.descricao %>`;
                                                document.getElementById('acao_EDIT').value = `<%= row.acao %>`;
                                                document.getElementById('responsavel_EDIT').value = '<%= row.responsavel %>';
                                                $('#prazo_EDIT').data('datetimepicker').date(formatBDToDateTime('<%- row.prazo %>'));
                                                $('#status_EDIT').val('<%= row.status %>');
                                                $('#status_EDIT').trigger('change');
                    
                                                })()">&nbsp;&nbsp;&nbsp;Editar&nbsp;&nbsp;

                                                </button>
 -->
                                                        <!-- Função anónima dentro da classe button
                                                    que seta o cod do registro selecionado no campo oculto do modal -->
                                                       <!--  <button class="btn btn-xs btn-danger" data-toggle="modal" data-target="#modalDEL" onclick="(function(){
                                                        document.getElementById('cod_DEL').textContent = '<%= row.cod %>';
                                                        })()">
                                                       Eliminar
                                                        </button> -->
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>

                                <tfoot>
                                    <tr>
                                        <th scope="col">Cod</th>
                                        <th scope="col">Data</th>
                                        <th scope="col">NºNFE</th>
                                        <th scope="col">Status Doct.</th>
                                        <th scope="col">Cod.Retorno</th>
                                        <th scope="col">Descricao</th>                                        
                                        <th scope="col">Acao</th>
                                        <th scope="col">Responsavel</th>
                                        <th scope="col">Prazo</th>
                                        <th scope="col">Status Process.</th>
                                        <th scope="col">Opcoes</th>
                                    </tr>
                                </tfoot>

                            </table>
                        <% } %>
                    </div>

                    <!-- ######################################################################### Modal para ADICIONAR -->
                    <div class="modal fade" id="modalADD" data-backdrop="static">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <!-- Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">Adicionar</h4>
