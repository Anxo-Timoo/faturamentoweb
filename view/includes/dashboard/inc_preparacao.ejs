<!-- Page Content (header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row sm-2">
            <!-- Título -->
            <div class="col-sm-6">
                <h1>Configuraçao de Impostos Material x Cliente</h1>
            </div>
            <!-- Navegação histórica -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/home">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                    <li class="breadcrumb-item active">Material X Imposto x Cliente</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Page Content (conteúdo) -->
<section class="content">
    <div class="container-fluid">
        <!-- Filtragem avançada -->
        <div class="row">
            <div class="col-sm-12">
                <div class="content-collapse">
                    <a data-toggle style="color: white;padding-left: 20px;"><i class="fas fa-filter" style="color: white;padding-right: 10px;"></i>Filtros</a>
                    <div class="content">
                        <form role="form" action="/preparacao" method="post">
                            <div class="card-body" style="display: grid;margin: -26px -21px -11px -21px;">

                                <!-- Campos do filtro -->
                                <label for="filter_Data" style="margin: 10px 0 0 0;">Material</label>
                                <textarea class="form-control form-control-sm" name="filter_Data" id="filter_Data" rows="1"><%= body.data %></textarea>
                                
                                <label for="filter_Turno" style="margin: 10px 0 0 0;">Cliente</label>
                                <textarea type="text" class="form-control form-control-sm" name="filter_Turno" id="filter_Turno" rows="1"><%= body.turno %></textarea>

                            </div>

                            <!-- Botões Filtrar e Limpar -->
                            <div class="card-footer" style="background: center;padding: 8px 0 8px 0px;display: flex;">
                                <!-- Filtrar -->
                                <button type="button" class="form-control btn-sm btn-primary" style="width: auto;height: fit-content;" onclick="(function() {
                                        window.location = '/preparacao/?page=1' + 
                                        '&[data]=' + document.getElementById('filter_Data').value + 
                                        '&[turno]=' + document.getElementById('filter_Turno').value;
                                    })()">&nbsp;&nbsp;&nbsp;&nbsp;Filtrar&nbsp;&nbsp;&nbsp;&nbsp;
                                </button>
                                &nbsp;&nbsp;&nbsp;
                                <!-- Limpar -->
                                <button type="button" class="form-control btn-sm btn-secondary" style="width: auto;height: fit-content;" onclick="(function() {
                                        document.getElementById('filter_Data').value='';
                                        document.getElementById('filter_Turno').value='';
                                    })()">&nbsp;&nbsp;&nbsp;Limpar&nbsp;&nbsp;&nbsp;
                                </button>
                                <!-- Dicas -->
                                <i class="far fa-question-circle" style="margin: 5px 0px 0px auto;color: #474f549f;"
                                    data-toggle="popover" data-placement="top" 
                                    title="Dicas!" 
                                    data-content="Você pode pesquisar vários critérios de uma vez, separando-os por ponto e vírgula<br>
                                                  <b>Exemplo:</b> <i>texto1;texto2;texto3</i><br><br>
                                                  Caso seja um campo data, digite a data no formato americano: AAAA-MM-DD<br>
                                                  <b>Exemplo:</b> <i>2021-05-22</i>">
                                </i>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- CRUD -->
        <div class="row">
            <div class="col-sm-12">

                <!-- Para iniciar fechado, adicione collapsed-card na class-->
                <div class="card card-primary card-outline">

                    <!-- ######################################################################### Cabeçalho -->
                    <div class="card-header">
                        <!-- Botões -->
                        <div class="btn-group">
                            <!-- Abre o modal para INSERT -
                            <button type="button" class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#modalADD">
                                &nbsp;Adicionar&nbsp;
                            </button>-->
                        </div>

                        <div class="btn-group">
                            <!-- Botão para exportar dados da tabela (tableExport) -->
                            <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-download" aria-hidden="true"></i>
                                <span class="caret"></span>
                            </button>

                            <!-- Exportar -->
                            <div class="dropdown-menu" role="menu">
                                <!-- Exportar para Excel -->
                                <a class="dropdown-item" style="cursor: pointer;" onclick="(function(){
                                    $('#TBtableBigData').tableExport({type:'excel', fileName: 'Preparacao', exportHiddenCells: true, ignoreColumn:'[18]'});                
                                })()"><i class="fas fa-file-excel" style="color: #118311;"></i>&nbsp;&nbsp;Ms-Excel</a>
                                <!-- Exportar para PDF -->
                                <a class="dropdown-item" style="cursor: pointer;" onclick="(function(){
                                    $('#TBtableBigData').tableExport({type:'pdf', fileName: 'Preparacao', exportHiddenCells: true, ignoreColumn:'[18]'});                
                                })()"><i class="fas fa-file-pdf" style="color: #d17021;"></i>&nbsp;&nbsp;PDF</a>
                            </div>
                        </div>

                        <!-- Botão Ocultar ou exibir o card -->
                        <div class="card-tools">
                            <!-- Botão Abrir/fechar card (Icone: fa-minus ou fa-plus) -->
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <!-- Botão destruir card -->
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>

                    </div>

                    <!-- ######################################################################### Tabela -->
                    <div class="card-body">
                        <% if (!Array.isArray(DTPreparacao) || !DTPreparacao.length) { %>
                        <!-- Não existe dados na tabela -->
                        <p class="text-center">Clique <a data-toggle="modal" data-target="#modalADD" style="cursor:pointer; color:rgb(79, 79, 255)"> aqui </a>para adicionar um novo registro.</p>
    
                        <% } else { %>
                            <table id="TBtableBigData" class="table table-hover" style="display: none;">
                                <!-- Paginação do BD -->
                                <div class="row" style="place-items: center;margin-top: -31px;margin-bottom: -17px;flex-flow: nowrap;">
                                    <% if (pageCount>= 1) { %>
                                    <!-- Texto lateral esquerdo mostrando a qtde de páginas -->
                                    <div class="col-sm-12 col-md-6">
                                        <div class="dataTables_info" aria-live="polite">
                                            Página <%= currentPage %> de <%= pageCount %> de um total de <%= totalItens %> registros (<%= pageSize %> por página)
                                        </div>
                                    </div>

                                    <!-- Lista de botões superior direito para paginação -->
                                    <div class="col-sm-12 col-md-6" style="text-align-last: right;">
                                        <div class="dataTables_paginate paging_simple_numbers">
                                            <ul class="pagination">
                                                <!-- Primeiro botão « -->
                                                <% if (currentPage>= 1) { %>
                                                    <li><a href="#" 
                                                        onclick="(function() {
                                                            window.location = '/preparacao/?page=1' + 
                                                            '&[data]=' + document.getElementById('filter_Data').value + 
                                                            '&[turno]=' + document.getElementById('filter_Turno').value;
                                                        })()">&laquo;</a>
                                                    </li>
                                                <% } %>

                                                <!-- Segundo botão desabilitado caso páginação > 5 -->
                                                <% var i=1; if (currentPage> 5) { i = + currentPage -4;} %>
                                                <% if (i !==1) { %>
                                                    <li class="disabled"><a href="#">...</a></li>
                                                <% } %>

                                                <!-- Botões da paginação -->
                                                <% for (i; i <=pageCount; i++) { %>
                                                    <% if (currentPage==i) { %>
                                                        <!-- Página corrente -->
                                                        <li class="active"><span><%= i %> <span class="sr-only">(current)</span></span></li>
                                                    <% } else { %>
                                                        <!-- Demais páginas -->
                                                        <li><a href="#" 
                                                            onclick="(function() {
                                                                window.location = '/preparacao/?page=<%= i %>' + 
                                                                '&[data]=' + document.getElementById('filter_Data').value + 
                                                                '&[turno]=' + document.getElementById('filter_Turno').value;
                                                            })()"><%= i %>
                                                            </a>
                                                        </li>
                                                    <% } %>

                                                    <!-- Mostra apenas 5 botões atras e a frente da página atual -->
                                                    <% if (i==(+currentPage +4)) { %>
                                                        <li class="disabled"><a href="#">...</a></li>
                                                    <% break; } %>
                                                <% } %>

                                                <!-- Último botão » -->
                                                <% if(currentPage !=pageCount) { %>
                                                    <li><a href="#" 
                                                        onclick="(function() {
                                                                window.location = '/preparacao/?page=<%= pageCount %>' + 
                                                                '&[data]=' + document.getElementById('filter_Data').value + 
                                                                '&[turno]=' + document.getElementById('filter_Turno').value;
                                                        })()">&raquo;</a>
                                                    </li>
                                                <% } %>
                                            </ul>
                                        </div>
                                    </div>
                                    <% } %>
                                </div>

                                <!-- Cabeçalho: Titulos da tabela -->
                                <thead class="thead-light">                                    
                                    <tr>
                                        <th scope="col">Cod</th>
                                        <th scope="col">Data</th>
                                        <th scope="col">Turno</th>
                                        <th scope="col">Remessa Inicial</th>                                                                     
                                        <th scope="col">Remessa Atual</th>
                                        <th scope="col">Remessa Fora Plano</th>
                                        <th scope="col">Linha Inicial</th>
                                        <th scope="col">Linha Atual</th>
                                        <th scope="col">Linha Fora Plano</th>
                                        <th scope="col">Bipe Inicial</th>
                                        <th scope="col">Bipe Atual</th>
                                        <th scope="col">Bipe Fora Plano</th>
                                        <th scope="col">Valor Inicial</th>
                                        <th scope="col">Valor Atual</th>
                                        <th scope="col">Valor Fora Plano</th>
                                        <th scope="col">Atendimento 12h</th>
                                        <th scope="col">Atendimento 24h</th>                                      
                                        <th scope="col">Setup</th>
                                        <th scope="col">Opcoes</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <!-- Detalhes: Dados da tabela -->
                                    <% DTPreparacao.forEach((row, index) => { %>
                                        <tr>
                                            <td style="min-width: 30px;"><%= row.cod %></td>                                            
                                            <% if(row.data == null || row.data == '0000-00-00 00:00:00' || row.data == 'Invalid Date') { %>
                                                <td></td>
                                            <% } else { %>
                                                <td style="min-width: 120px;"><%- row.data.toLocaleString() %></td>
                                            <% } %>
                                            <td><%= row.turno %></td>
                                            <td><%= row.remessa_inicial %></td>
                                            <td><%= row.remessa_atual %></td>
                                            <td><%= row.remessa_fora_plano %></td>
                                            <td><%= row.linha_inicial %></td>
                                            <td><%= row.linha_atual %></td>
                                            <td><%= row.linha_fora_plano %></td>
                                            <td><%= row.bipe_inicial %></td>
                                            <td><%= row.bipe_atual %></td>
                                            <td><%= row.bipe_fora_plano %></td>
                                            <td><%= Intl.NumberFormat('pt-br', {style: 'currency', currency: 'BRL'}).format(row.valor_inicial) %></td>
                                            <td><%= Intl.NumberFormat('pt-br', {style: 'currency', currency: 'BRL'}).format(row.valor_atual) %></td>                                            
                                            <td><%= Intl.NumberFormat('pt-br', {style: 'currency', currency: 'BRL'}).format(row.valor_fora_plano) %></td>
                                            <td><%= row.atendimento_12h %>%</td>
                                            <td><%= row.atendimento_24h %>%</td>
                                            <td><%= row.setup %></td>

                                            <!-- Coluna: Opções -->
                                            <td style="min-width: 130px;">
                                                <button class="btn btn-xs btn-warning" data-toggle="modal" data-target="#modalEDIT" 
                                                onclick="(function(){                      
                                                    //Setando o valor nos campos de texto 
                                                    document.getElementById('cod_EDIT').value = '<%= row.cod %>';
                                                    $('#data_EDIT').data('datetimepicker').date('<%- row.data %>');
                                                    $('#turno_EDIT').val('<%= row.turno %>');
                                                    $('#turno_EDIT').trigger('change');
                                                    document.getElementById('remessa_inicial_EDIT').value = '<%= row.remessa_inicial %>';
                                                    document.getElementById('remessa_atual_EDIT').value = '<%= row.remessa_atual %>';
                                                    document.getElementById('remessa_fora_plano_EDIT').value = '<%= row.remessa_fora_plano %>';
                                                    document.getElementById('linha_inicial_EDIT').value = '<%= row.linha_inicial %>';
                                                    document.getElementById('linha_atual_EDIT').value = '<%= row.linha_atual %>';
                                                    document.getElementById('linha_fora_plano_EDIT').value = '<%= row.linha_fora_plano %>';
                                                    document.getElementById('bipe_inicial_EDIT').value = '<%= row.bipe_inicial %>';
                                                    document.getElementById('bipe_atual_EDIT').value = '<%= row.bipe_atual %>';
                                                    document.getElementById('bipe_fora_plano_EDIT').value = '<%= row.bipe_fora_plano %>';
                                                    document.getElementById('valor_inicial_EDIT').value = formatBDToDecimal('<%= row.valor_inicial %>');
                                                    document.getElementById('valor_atual_EDIT').value = formatBDToDecimal('<%= row.valor_atual %>');
                                                    document.getElementById('valor_fora_plano_EDIT').value = formatBDToDecimal('<%= row.valor_fora_plano %>');
                                                    document.getElementById('atendimento_12h_EDIT').value = formatBDToDecimal('<%= row.atendimento_12h %>');
                                                    document.getElementById('atendimento_24h_EDIT').value = formatBDToDecimal('<%= row.atendimento_24h %>');
                                                    $('#setup_EDIT').data('datetimepicker').date('<%- row.setup %>');
                                                })()">&nbsp;&nbsp;&nbsp;Editar&nbsp;&nbsp;

                                                </button>
                                                        <!-- Função anónima dentro da classe button
                                                    que seta o cod do registro selecionado no campo oculto do modal -->
                                                        <button class="btn btn-xs btn-danger" data-toggle="modal" data-target="#modalDEL" onclick="(function(){
                                                    document.getElementById('cod_DEL').textContent = '<%= row.cod %>';
                                                    })()">
                                                    Eliminar
                                                </button>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>

                                <tfoot>
                                    <tr>
                                        <th scope="col">Cod</th>
                                        <th scope="col">Data</th>
                                        <th scope="col">Turno</th>
                                        <th scope="col">Remessa Inicial</th>                                                                     
                                        <th scope="col">Remessa Atual</th>
                                        <th scope="col">Remessa Fora Plano</th>
                                        <th scope="col">Linha Inicial</th>
                                        <th scope="col">Linha Atual</th>
                                        <th scope="col">Linha Fora Plano</th>
                                        <th scope="col">Bipe Inicial</th>
                                        <th scope="col">Bipe Atual</th>
                                        <th scope="col">Bipe Fora Plano</th>
                                        <th scope="col">Valor Inicial</th>
                                        <th scope="col">Valor Atual</th>
                                        <th scope="col">Valor Fora Plano</th>
                                        <th scope="col">Atendimento 12h</th>
                                        <th scope="col">Atendimento 24h</th>                                      
                                        <th scope="col">Setup</th>
                                        <th scope="col">Opcoes</th>
                                    </tr>
                                </tfoot>
                            </table>
                        <% } %>
                    </div>

                    <!-- ######################################################################### Modal para ADICIONAR -->
                    <div class="modal fade" id="modalADD" data-backdrop="static">
                        <div class="modal-dialog modal-md">
                            <div class="modal-content">
                                <!-- Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">Adicionar</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <!-- Conteúdo central do modal -->
                                <form role="form" action="/addPreparacao" method="post" enctype="multipart/form-data">
                                    <!-- Campos do formulário -->
                                    <div class="modal-body">
                                        <!-- Cod -->
                                        <div class="row" style="display: none;">
                                            <div class="col-sm-2">
                                                <div class="form-group">
                                                    <label for="cod_ADD" class="label">Cod</label>
                                                    <input type="text" class="form-control form-control-sm" name="cod_ADD" id="cod_ADD" placeholder="Cod" readonly=“true”>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Data e Turno -->
                                        <div class="row">
                                            <!-- Data -->
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label for="data_ADD" class="label">Data</label>
                                                    <div class="input-group date" id="data_ADD"
                                                        data-target-input="nearest">
                                                        <input type="text"
                                                            class="form-control form-control-sm datetimepicker-input date_times"
                                                            data-target="#data_ADD"
                                                            name="data_INPUT_ADD"
                                                            id="data_INPUT_ADD" required />
                                                        <div class="input-group-append"
                                                            data-target="#data_ADD"
                                                            data-toggle="datetimepicker">
                                                            <div class="input-group-text"><i class="far fa-calendar-alt"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Turno -->
                                            <div class="col-sm-4">
                                                <div class="form-group">
                                                    <label for="turno_ADD" class="label">Turno</label>
                                                    <select class="form-control form-control-sm select2"
                                                        style="width: 100%;" name="turno_ADD" id="turno_ADD" required>
                                                        <option value="">-- Selecione --</option>
                                                        <option value="T1">T1</option>
                                                        <option value="T2">T2</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <hr><!-- Linha divisória -->

                                        <!-- Cabeçalho (Inicial, Atual e Fora do plano) -->
                                        <div class="row" style="margin-bottom: -15px;">                                           
                                            <div class="col-sm-3" style="TEXT-ALIGN: CENTER;">
                                                <div class="form-group">
                                                    <label class="label"></label>
                                                </div>
                                            </div>
                                            <div class="col-sm-3" style="TEXT-ALIGN: CENTER;">
                                                <div class="form-group">
                                                    <label class="label">Inicio do turno</label>
                                                </div>
                                            </div>
                                            <div class="col-sm-3" style="TEXT-ALIGN: CENTER;">
                                                <div class="form-group">
                                                    <label class="label">Status atual</label>
                                                </div>
                                            </div>
                                            <div class="col-sm-3" style="TEXT-ALIGN: CENTER;">
                                                <div class="form-group">
                                                    <label class="label">Fora do plano</label>
                                                </div>
                                            </div>                                            
                                        </div>

                                        <!-- Remessas --> 
                                        <div class="row">
                                            <div class="col-sm-3" style="padding-top: 3px;">
                                                <h6>Remessas</h6>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <input type="text" 
                                                        class="form-control form-control-sm"
                                                        style="TEXT-ALIGN: CENTER;"
                                                        name="remessa_inicial_ADD" id="remessa_inicial_ADD"
                                                        placeholder="Remessa inicial">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <input type="text" 
                                                        class="form-control form-control-sm"
                                                        style="TEXT-ALIGN: CENTER;"
                                                        name="remessa_atual_ADD" id="remessa_atual_ADD"
                                                        placeholder="Remessa atual">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <input type="text" 
                                                        class="form-control form-control-sm"
                                                        style="TEXT-ALIGN: CENTER;"
                                                        name="remessa_fora_plano_ADD" id="remessa_fora_plano_ADD"
                                                        placeholder="Remessa fora">
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Linhas --> 
                                        <div class="row">
                                            <div class="col-sm-3" style="padding-top: 3px;">
                                                <h6>Linhas</h6>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <input type="text" 
                                                        class="form-control form-control-sm"
                                                        style="TEXT-ALIGN: CENTER;"
                                                        name="linha_inicial_ADD" id="linha_inicial_ADD"
                                                        placeholder="Linha inicial">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <input type="text" 
                                                        class="form-control form-control-sm"
                                                        style="TEXT-ALIGN: CENTER;"
                                                        name="linha_atual_ADD" id="linha_atual_ADD"
                                                        placeholder="Linha atual">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <input type="text" 
                                                        class="form-control form-control-sm"
                                                        style="TEXT-ALIGN: CENTER;"
                                                        name="linha_fora_plano_ADD" id="linha_fora_plano_ADD"
                                                        placeholder="Linha fora">
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Bipes --> 
                                        <div class="row">
                                            <div class="col-sm-3" style="padding-top: 3px;">
                                                <h6>Bipes</h6>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <input type="text" 
                                                        class="form-control form-control-sm"
                                                        style="TEXT-ALIGN: CENTER;"
                                                        name="bipe_inicial_ADD" id="bipe_inicial_ADD"
                                                        placeholder="Bipe inicial">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <input type="text" 
                                                        class="form-control form-control-sm"
                                                        style="TEXT-ALIGN: CENTER;"
                                                        name="bipe_atual_ADD" id="bipe_atual_ADD"
                                                        placeholder="Bipe atual">
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <input type="text" 
                                                        class="form-control form-control-sm"
                                                        style="TEXT-ALIGN: CENTER;"
                                                        name="bipe_fora_plano_ADD" id="bipe_fora_plano_ADD"
                                                        placeholder="Bipe fora">
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Valor --> 
                                        <div class="row">
                                            <div class="col-sm-3" style="padding-top: 3px;">
                                                <h6>Valor (R$)</h6>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <input type="text"
                                                        class="form-control form-control-sm money"
                                                        style="TEXT-ALIGN: CENTER;"
                                                        name="valor_inicial_ADD" id="valor_inicial_ADD" 
                                                        placeholder="Valor inicial" required>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <input type="text"
                                                        class="form-control form-control-sm money"
                                                        style="TEXT-ALIGN: CENTER;"
                                                        name="valor_atual_ADD" id="valor_atual_ADD" 
                                                        placeholder="Valor atual" required>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <input type="text"
                                                        class="form-control form-control-sm money"
                                                        style="TEXT-ALIGN: CENTER;"
                                                        name="valor_fora_plano_ADD" id="valor_fora_plano_ADD" 
                                                        placeholder="Valor fora" required>
                                                </div>
                                            </div>
                                        </div>

                                        <hr><!-- Linha divisória -->

                                        <!-- Atendimento e Setup --> 
