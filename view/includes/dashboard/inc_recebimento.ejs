<!-- Page Content (header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row sm-2">
            <!-- Título -->
            <div class="col-sm-6">
                <h1>Relatório de Recebimentos</h1>
            </div>
            <!-- Navegação histórica -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/home">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                    <li class="breadcrumb-item active">Recebimento</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Page Content (conteúdo) -->
<section class="content">
    <div class="container-fluid">
        <!-- Filtragem avançada -->
        <div class="row">
            <div class="col-sm-12">
                <div class="content-collapse">
                    <a data-toggle style="color: white;padding-left: 20px;"><i class="fas fa-filter" style="color: white;padding-right: 10px;"></i>Filtros</a>
                    <div class="content">
                        <form role="form" action="/recebimento" method="post">
                            <div class="card-body" style="display: grid;margin: -26px -21px -11px -21px;">

                                <!-- Campos do filtro -->
                                <label for="filter_DataIni" style="margin: 10px 0 0 0;">Recebimento - Data Inicio</label>
                                <textarea class="form-control form-control-sm" placeholder = 'Formato: 01011900'name="filter_DataIni" id="filter_DataIni" rows="1"><%= body.dataIni %></textarea>

                                <label for="filter_DataFim" style="margin: 10px 0 0 0;">Recebimento - Data Fim</label>
                                <textarea class="form-control form-control-sm"  placeholder = 'Formato: 01011900' name="filter_DataFim" id="filter_DataFim" rows="1"><%= body.dataFim %></textarea>
                                
                                <label for="filter_Cliente" style="margin: 10px 0 0 0;">Cliente</label>
                                <textarea class="form-control form-control-sm" name="filter_Cliente" id="filter_Cliente" rows="1"><%= body.cliente %></textarea>

                                <label for="filter_Nfnum" style="margin: 10px 0 0 0;">NF</label>
                                <textarea type="text" class="form-control form-control-sm" name="filter_Nfnum" id="filter_Nfnum" rows="1"><%= body.nfnum %></textarea>

                            </div>

                            <!-- Botões Filtrar e Limpar -->
                            <div class="card-footer" style="background: center;padding: 8px 0 8px 0px;display: flex;">
                                <!-- Filtrar -->
                                <button type="button" class="form-control btn-sm btn-primary" style="width: auto;height: fit-content;" onclick="(function() {
                                        window.location = '/recebimento/?page=1' + 
                                        '&[dataIni]=' + document.getElementById('filter_DataIni').value + 
                                        '&[dataFim]=' + document.getElementById('filter_DataFim').value + 
                                        '&[cliente]=' + document.getElementById('filter_Cliente').value + 
                                        '&[nfnum]=' + document.getElementById('filter_Nfnum').value;
                                    })()">&nbsp;&nbsp;&nbsp;&nbsp;Filtrar&nbsp;&nbsp;&nbsp;&nbsp;
                                </button>
                                &nbsp;&nbsp;&nbsp;
                                <!-- Limpar -->
                                <button type="button" class="form-control btn-sm btn-secondary" style="width: auto;height: fit-content;" onclick="(function() {
                                        document.getElementById('filter_DataIni').value='';
                                        document.getElementById('filter_DataFim').value='';
                                        document.getElementById('filter_Cliente').value='';
                                        document.getElementById('filter_Nfnum').value='';
                                    })()">&nbsp;&nbsp;&nbsp;Limpar&nbsp;&nbsp;&nbsp;
                                </button>
                                <!-- Dicas -->
                                <i class="far fa-question-circle" style="margin: 5px 0px 0px auto;color: #474f549f;"
                                    data-toggle="popover" data-placement="top" 
                                    title="Dicas!" 
                                    data-content="Você pode pesquisar vários critérios de uma vez, separando-os por ponto e vírgula<br>
                                                  <b>Exemplo:</b> <i>texto1;texto2;texto3</i><br><br>
                                                  Caso seja um campo data, digite a data no formato americano: AAAA-MM-DD<br>
                                                  <b>Exemplo:</b> <i>2021-05-22</i>">
                                </i>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- CRUD -->
        <div class="row">
            <div class="col-sm-12">

                <!-- Para iniciar fechado, adicione collapsed-card na class-->
                <div class="card card-primary card-outline">

                    <!-- ######################################################################### Cabeçalho -->
                    <div class="card-header">
                        <!-- Botões -->
                        <div class="btn-group">
                            <!-- Abre o modal para INSERT -->
                            <!--< button type="button" class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#modalADD">
                                &nbsp;Adicionar&nbsp;
                            </button> -->
                        </div>

                        <div class="btn-group">
                            <!-- Botão para exportar dados da tabela (tableExport) -->
                            <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-download" aria-hidden="true"></i>
                                <span class="caret"></span>
                            </button>

                            <!-- Exportar -->
                            <div class="dropdown-menu" role="menu">
                                <!-- Exportar para Excel -->
                                <a class="dropdown-item" style="cursor: pointer;" onclick="(function(){
                                    $('#TBtableBigData').tableExport({type:'excel', fileName: 'Recebimento', exportHiddenCells: true, ignoreColumn:'[10]'});                
                                })()"><i class="fas fa-file-excel" style="color: #118311;"></i>&nbsp;&nbsp;Ms-Excel</a>
                                <!-- Exportar para PDF -->
                                <a class="dropdown-item" style="cursor: pointer;" onclick="(function(){
                                    $('#TBtableBigData').tableExport({type:'pdf', fileName: 'Recebimento', exportHiddenCells: true, ignoreColumn:'[10]'});                
                                })()"><i class="fas fa-file-pdf" style="color: #d17021;"></i>&nbsp;&nbsp;PDF</a>
                            </div>
                        </div>

                        <!-- Botão Ocultar ou exibir o card -->
                        <div class="card-tools">
                            <!-- Botão Abrir/fechar card (Icone: fa-minus ou fa-plus) -->
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <!-- Botão destruir card -->
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>

                    </div>

                    <!-- ######################################################################### Tabela -->
                    <div class="card-body" style="overflow: auto; height: 600px; width: 100%">
                        <% if (!Array.isArray(DTRecebimento) || !DTRecebimento.length) { %>
                        <!-- Não existe dados na tabela 
                        <p class="text-center">Clique <a data-toggle="modal" data-target="#modalADD" style="cursor:pointer; color:rgb(79, 79, 255)"> aqui </a>para adicionar um novo registro.</p>-->
    
                        <% } else { %>
                            <table  id="TBtableBigData" class="table table-hover" style="display: none;width:auto;table-layout: fixed;overflow: hidden;">
                                <!-- Paginação do BD -->
                                <div class="row" style="place-items: center;margin-top: -31px;margin-bottom: -17px;flex-flow: nowrap;">
                                    <% if (pageCount>= 1) { %>
                                    <!-- Texto lateral esquerdo mostrando a qtde de páginas -->
                                    <div class="col-sm-12 col-md-6">
                                        <div class="dataTables_info" aria-live="polite">
                                            Página <%= currentPage %> de <%= pageCount %> de um total de <%= totalItens %> registros (<%= pageSize %> por página)
                                        </div>
                                    </div>

                                    <!-- Lista de botões superior direito para paginação -->
                                    <div class="col-sm-12 col-md-6" style="text-align-last: right;">
                                        <div class="dataTables_paginate paging_simple_numbers">
                                            <ul class="pagination">
                                                <!-- Primeiro botão « -->
                                                <% if (currentPage>= 1) { %>
                                                    <li><a href="#" 
                                                        onclick="(function() {
                                                            window.location = '/recebimento/?page=1' + 
                                                            '&[dataIni]=' + document.getElementById('filter_DataIni').value + 
                                                            '&[dataFim]=' + document.getElementById('filter_DataFim').value + 
                                                            '&[cliente]=' + document.getElementById('filter_Cliente').value + 
                                                            '&[nfnum]=' + document.getElementById('filter_Nfnum').value;
                                                        })()">&laquo;</a>
                                                    </li>
                                                <% } %>

                                                <!-- Segundo botão desabilitado caso páginação > 5 -->
                                                <% var i=1; if (currentPage> 5) { i = + currentPage -4;} %>
                                                <% if (i !==1) { %>
                                                    <li class="disabled"><a href="#">...</a></li>
                                                <% } %>

                                                <!-- Botões da paginação -->
                                                <% for (i; i <=pageCount; i++) { %>
                                                    <% if (currentPage==i) { %>
                                                        <!-- Página corrente -->
                                                        <li class="active"><span><%= i %> <span class="sr-only">(current)</span></span></li>
                                                    <% } else { %>
                                                        <!-- Demais páginas -->
                                                        <li><a href="#" 
                                                            onclick="(function() {
                                                                window.location = '/recebimento/?page=<%= i %>' + 
                                                                '&[dataIni]=' + document.getElementById('filter_DataIni').value + 
                                                                '&[dataFim]=' + document.getElementById('filter_DataFim').value + 
                                                                '&[cliente]=' + document.getElementById('filter_Cliente').value + 
                                                                '&[nfnum]=' + document.getElementById('filter_Nfnum').value;
                                                            })()"><%= i %>
                                                            </a>
                                                        </li>
                                                    <% } %>

                                                    <!-- Mostra apenas 5 botões atras e a frente da página atual -->
                                                    <% if (i==(+currentPage +4)) { %>
                                                        <li class="disabled"><a href="#">...</a></li>
                                                    <% break; } %>
                                                <% } %>

                                                <!-- Último botão » -->
                                                <% if(currentPage !=pageCount) { %>
                                                    <li><a href="#" 
                                                        onclick="(function() {
                                                                window.location = '/recebimento/?page=<%= pageCount %>' + 
                                                                '&[dataIni]=' + document.getElementById('filter_DataIni').value + 
                                                                '&[dataFim]=' + document.getElementById('filter_DataFim').value + 
                                                                '&[cliente]=' + document.getElementById('filter_Cliente').value + 
                                                                '&[nfnum]=' + document.getElementById('filter_Nfnum').value;
                                                        })()">&raquo;</a>
                                                    </li>
                                                <% } %>
                                            </ul>
                                        </div>
                                    </div>
                                    <% } %>
                                </div>

                                <!-- Cabeçalho: Titulos da tabela -->
                                <thead class="thead-light">                                    
                                    <tr>
                                        <th scope="col">Nota Fiscal</th>                                        
                                        <th scope="col">Dt.Emissao</th>
                                        <th scope="col">Stat.Pgto</th>
                                        <th scope="col">Dt.Pagto</th>
                                        <th scope="col">Doc.Pagto</th>
                                        <th scope="col">Doc.Faturamento</th>
                                        <th scope="col">Valor Bruto</th>
                                        <th scope="col">Valor Liquido</th>
                                        <th scope="col">Projeto</th>
                                        <th scope="col">Descriçao</th>                                                                     
                                        <th scope="col">Filial</th>
                                        <th scope="col">Dt.Vencimento</th>
                                        <th scope="col">Cliente</th>
                                        <th style="width: 100%;white-space: nowrap;text-overflow: ellipsis;overflow: hidden;">Nome</th>
                                        <th scope="col" style="width: 100%;white-space: nowrap;text-overflow: ellipsis;overflow: hidden;">Texto Item</th>
                                        <th scope="col">Valor Pago</th>
                                        <th scope="col">Doc.Reclass</th>
                                        <th scope="col">Proj.Final</th>
                                        <th scope="col">Nome</th>
                                        <th scope="col">Vlr.Proj.Atual</th>
                                        <!-- <th scope="col">Veículos previstos</th>
                                        <th scope="col">Volumes previstos</th>-->
                                       <!-- <th scope="col">Opcoes</th> -->
                                    </tr>
                                </thead>

                                <tbody>
                                    <!-- Detalhes: Dados da tabela -->
                                    <% DTRecebimento.forEach((row, index) => { %>
                                        <tr>
                                           <!-- <td style="min-width: 30px;"><%= row.cod %></td>                                            
                                            <% if(row.data == null || row.data == '0000-00-00 00:00:00' || row.data == 'Invalid Date') { %>
                                                <td></td>
                                            <% } else { %>
                                                <td style="min-width: 120px;"><%- row.data.toLocaleString() %></td>
                                            <% } %>
                                            
                                            <td><%= row.dia_semana %></td>-->
                                            <td><%= DTRecebimento[index].nfnum.toString() %></td>                                           
                                            <td><%= DTRecebimento[index].docdat.toString().substring(6,8)+'/'+DTRecebimento[index].docdat.toString().substring(4,6)+'/'+DTRecebimento[index].docdat.toString().substring(0,4) %></td>
                                            <td><%= DTRecebimento[index].statuspag.toString() %></td> 
                                            <td><%= DTRecebimento[index].augdt.toString().substring(6,8)+'/'+DTRecebimento[index].augdt.toString().substring(4,6)+'/'+DTRecebimento[index].augdt.toString().substring(0,4) %></td> 
                                            <!-- <td><%= row.turno %></td> -->                                           
                                               
                                            <td><a href="#" data-toggle="modal"   
                                                onclick="(function() {
                                                window.open('/fb03/' + '<%= DTRecebimento[index].augbl.toString() %>'+ '&' +'<%=DTRecebimento[index].augdt.toString().substring(0,4)%>','_blank');
                                                })()"><%= DTRecebimento[index].augbl === undefined ? 'Não pago' : DTRecebimento[index].augbl.toString() %></a>
                                            </td>
                                            <td><a href="#" data-toggle="modal"   
                                                onclick="(function() {
                                                window.open('/fb03/' + '<%= DTRecebimento[index].refkey.toString() %>' + '&' +'<%=DTRecebimento[index].docdat.toString().substring(0,4)%>','_blank');
                                                })()"><%= DTRecebimento[index].refkey.toString() %></a>
                                            </td>                                                                                     
                                                                                       
                                            <td><%= DTRecebimento[index].nftot.toString() %></td>
                                            <td><%= DTRecebimento[index].vlr_liquido.toString() %></td>
                                            <!-- <td><%= row.tempo_conferencia %></td> -->
                                            <td><%= DTRecebimento[index].projk.toString() %></td>
                                            <td><%= DTRecebimento[index].post1.toString() %></td>
                                            <td><%= DTRecebimento[index].werks.toString() %></td>
                                            <td><%= DTRecebimento[index].zfbdt.toString().substring(6,8)+'/'+DTRecebimento[index].zfbdt.toString().substring(4,6)+'/'+DTRecebimento[index].zfbdt.toString().substring(0,4) %></td>
                                            <td><%= DTRecebimento[index].parid.toString() %></td>
                                            <td style="white-space: nowrap;text-overflow: ellipsis;overflow: hidden;"><%= DTRecebimento[index].name1.toString() %></td>
                                            <td style="width: 100%;white-space: nowrap;text-overflow: ellipsis;overflow: hidden;"><%= DTRecebimento[index].sgtxt.toString() %></td>
                                            <td><%= DTRecebimento[index].vlr_pago.toString() %></td>
                                            <td><%= DTRecebimento[index].belnr_reclas.toString() %></td>
                                            <td><%= DTRecebimento[index].pep_reclas.toString() %></td>
                                            <td><%= DTRecebimento[index].post1_reclas.toString() %></td>
                                            <td><%= DTRecebimento[index].vlr_proj_atual.toString() %></td>
                                           <!--  <td><%= row.veiculos_previstos %></td>
                                            <td><%= row.volumes_previstos %></td> -->

                                            <!-- Coluna: Opções -->
                                            <td style="min-width: 130px;">
                                               <!--  <button class="btn btn-xs btn-warning" data-toggle="modal" data-target="#modalEDIT" 
                                                onclick="(function(){                      
                                                    //Setando o valor nos campos de texto 
                                                    document.getElementById('cod_EDIT').value = '<%= row.cod %>';
                                                    $('#data_EDIT').data('datetimepicker').date('<%- row.data %>');
                                                    $('#turno_EDIT').val('<%= row.turno %>');
                                                    $('#turno_EDIT').trigger('change');
                                                    document.getElementById('palete_pendente_EDIT').value = '<%= row.palete_pendente %>';
                                                    $('#tempo_conferencia_INPUT_EDIT').val('<%- row.tempo_conferencia %>');
                                                    $('#tempo_conferencia_INPUT_EDIT').trigger('change');
                                                    $('#tempo_inspecao_INPUT_EDIT').val('<%- row.tempo_inspecao %>');
                                                    $('#tempo_inspecao_INPUT_EDIT').trigger('change');
                                                    document.getElementById('veiculos_previstos_EDIT').value = '<%= row.veiculos_previstos %>';
                                                    document.getElementById('volumes_previstos_EDIT').value = '<%= row.volumes_previstos %>';
                                                })()">&nbsp;&nbsp;&nbsp;Editar&nbsp;&nbsp;

                                                </button> -->

                                                        <!-- Função anónima dentro da classe button
                                                    que seta o cod do registro selecionado no campo oculto do modal -->
                                                     <!--    <button class="btn btn-xs btn-danger" data-toggle="modal" data-target="#modalDEL" onclick="(function(){
                                                    document.getElementById('cod_DEL').textContent = '<%= row.cod %>';
                                                    })()">
                                                    Eliminar
                                                </button> -->
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>

                                <tfoot>
                                    <tr>
                                        <th scope="col">Nota Fiscal</th>
                                        <th scope="col">Dt.Recebimento</th>
                                        <th scope="col">Stat.Pgto</th>
                                        <th scope="col">Dt.Pagto</th>
                                        <th scope="col">Doc.Pagto</th>
                                        <th scope="col">Doc.Faturamento</th>
                                        <th scope="col">Valor Bruto</th>
                                        <th scope="col">Valor Liquido</th>
                                        <th scope="col">Projeto</th>
                                        <th scope="col">Descriçao</th>                                                                                                        
                                        <th scope="col">Filial</th>
                                        <th scope="col">Dt.Vencimento</th>
                                        <th scope="col">Cliente</th>
                                        <th class="w-25">Nome</th>
                                        <th scope="col" style="width: 100%;">Texto Item</th>
                                        <th scope="col">Valor Pago</th>
                                        <th scope="col">Doc.Reclass</th>
                                        <th scope="col">Proj.Reclass</th>
                                        <th scope="col">Nome</th>
                                        <th scope="col">Vlr.Proj.Atual</th>
                                       
