                                                        <input type="text" 
                                                            class="form-control form-control-sm"
                                                            data-target="#tempo_inspecao_ADD"
                                                            name="tempo_inspecao_INPUT_ADD"
                                                            id="tempo_inspecao_INPUT_ADD"/>
                                                        <div class="input-group-append"
                                                            data-target="#tempo_inspecao_ADD"
                                                            data-toggle="clockpicker">
                                                            <div class="input-group-text"><i class="fas fa-stopwatch"></i></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <!-- Veiculos previstos -->
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label for="veiculos_previstos_ADD" class="label">Veículos previstos</label>
