                                                    <input type="text" class="form-control form-control-sm"
                                                        name="veiculos_previstos_ADD" id="veiculos_previstos_ADD"
                                                        placeholder="Qtde de veículos" required>
                                                </div>
                                            </div>

                                            <!-- Volumes previstos -->
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label for="volumes_previstos_ADD" class="label">Volumes previstos</label>
                                                    <input type="text" class="form-control form-control-sm"
                                                        name="volumes_previstos_ADD" id="volumes_previstos_ADD"
                                                        placeholder="Qtde de paletes" required>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
