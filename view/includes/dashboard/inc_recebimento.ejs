                                                        <option value="T2">T2</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <!-- Palete pendente -->
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label for="palete_pendente_ADD" class="label">Iniciou o turno com (Paletes)</label>
                                                    <input type="text" class="form-control form-control-sm"
                                                        name="palete_pendente_ADD" id="palete_pendente_ADD"
                                                        placeholder="Qtde de paletes" required>
                                                </div>
                                            </div>

                                            <!-- Tempo em stage -->
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label for="tempo_conferencia_ADD" class="label">Em aberto</label>
                                                    <div class="input-group clockpicker">
                                                        <input type="text" 
                                                            class="form-control form-control-sm"
                                                            data-target="#tempo_conferencia_ADD"
                                                            name="tempo_conferencia_INPUT_ADD"
                                                            id="tempo_conferencia_INPUT_ADD"/>
                                                        <div class="input-group-append"
                                                            data-target="#tempo_conferencia_ADD"
                                                            data-toggle="clockpicker">
                                                            <div class="input-group-text"><i class="fas fa-stopwatch"></i></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Tempo em inspeção -->
                                            <div class="col-sm-3">
                                                <div class="form-group">
                                                    <label for="tempo_inspecao_ADD" class="label">Pagos</label>
